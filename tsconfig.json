{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "types": [
      "node",
      "vite/client"
    ],
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src", "*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
